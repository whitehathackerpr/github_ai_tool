# Application Settings
APP_NAME=GitHub AI Tool
APP_VERSION=0.1.0
DEBUG=False
LOG_LEVEL=INFO

# Server Settings
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your_secure_random_string_here
ACCESS_TOKEN_EXPIRE_MINUTES=60

# GitHub OAuth (required for GitHub integration)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Redis Cache (optional but recommended for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=False
# Alternative: use REDIS_URL for cloud providers
# REDIS_URL=redis://username:password@host:port/db

# Cache Settings
CACHE_EXPIRATION=3600  # 1 hour in seconds

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_MAX_REQUESTS=60  # requests
RATE_LIMIT_WINDOW=60  # seconds window

# AI Service (required for AI features)
OPENAI_API_KEY=your_openai_api_key
AI_MODEL=gpt-3.5-turbo  # or gpt-4 for more advanced features

# Background Tasks
BACKGROUND_WORKERS=3

# Temporary Directory
TEMP_DIR=/tmp/github_ai_tool

